<% layout("/layouts/boilerplate") %>
<body>
  <style>
    :root {
      --main-color: #fe424d;
      --secondary-color: #dd91f6;
      --bg-color: #ffffff;
      --snd-bg-color: #f9f9f9;
      --text-color: #222222;
      --text-muted: #555555;
      --border-color: #e4e4e4;
      --highlight-color: #f6c90e;
      --nav-bg: #ffffff;
      --nav-text: #111111;
      --filter-bg: #f7f7f7;
      --filter-hover: #e5e5ff;
      --filter-text-hover: #6c5ce7;
    }

    /* Horizontal Scrolling Filter Menu */
    .filters {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      gap: 0.8rem;
      padding: 1rem 2rem;
      width: 100vw;
      box-sizing: border-box;
      background-color: var(--bg-color);
    }

    .filter {
      text-align: center;
      padding: 0.6rem 1rem;
      width: 200px;
      margin: 0 10px;
      font-size: 1rem;
      font-weight: 500;
      display: flex;
      align-items: center;
      background: var(--filter-bg);
      box-shadow: 1px 2px 5px rgba(0, 0, 0, 0.05);
      border-radius: 10px;
      border: none;
      transition: all 0.3s ease;
      color: var(--text-color);
    }

    .filter i {
      font-size: 1.5rem;
      margin-right: 0.5rem;
    }

    .filter.active,
    .filter:hover {
      background-color: var(--filter-hover);
      color: var(--filter-text-hover);
      transform: scale(1.02);
      cursor: pointer;
    }

    .filters::-webkit-scrollbar {
      display: none;
    }

    .filter p {
      font-size: 0.8rem;
      color: var(--text-muted);
    }

    /* Carousel */
    .carousel-inner img {
      width: 100%;
      height: 20rem;
      object-fit: cover;
    }

    /* Responsive Grid */
    .row {
      display: flex;
      flex-wrap: wrap;
      gap: 0;
    }

    .col {
      flex: 1 1 calc(33.33% - 1rem);
      box-sizing: border-box;
    }

    @media (max-width: 768px) {
      .col {
        flex: 1 1 calc(50% - 1rem);
      }
    }

    @media (max-width: 576px) {
      .col {
        flex: 1 1 100%;
      }
    }

    /* Card Styling */
    .card-body {
      padding: 1rem 1.2rem;
      font-family: 'Poppins', sans-serif;
      background-color: var(--bg-color);
    }

    .card-body h5 {
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-color);
    }

    .card-body p {
      font-size: 0.9rem;
      margin: 0.2rem 0;
      color: var(--text-muted);
    }

    .card {
      animation: fadeInUp 0.5s ease forwards;
      opacity: 0;
      background-color: var(--snd-bg-color);
      border: 1px solid var(--border-color);
    }

    @keyframes fadeInUp {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }

    /* Listing Card */
    .listing-card {
      display: block;
      transition: transform 0.3s ease;
    }

    .listing-card:hover {
      transform: scale(1.02);
    }

    .listing-card img {
      width: 100%;
      height: 20rem;
      object-fit: cover;
      border-top-left-radius: 10px;
      border-top-right-radius: 10px;
    }
  </style>



